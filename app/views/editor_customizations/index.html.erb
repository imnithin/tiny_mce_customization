<script type="text/javascript" src="/tinymce/tinymce.js"></script>
<script type="text/javascript">
tinymce.init({
	selector: "textarea",
	fontsize_formats: "6pt 7pt 8pt 9pt 10pt 11pt 12pt 26pt 36pt",
	setup: function(editor) {
		editor.addButton('menu_button', {
			type: 'menubutton',
			text: 'Menu Button',
			icon: false,
			menu: [
			{text:'Basic Information', menu:[<% for data in @basic_data %>{text:'<%= " #{t(data)}" %>', onclick: function() {editor.insertContent('<i>$%<%= data %>\%</i>');}},<% end %>]},

			{text:'Additional Data', menu:[<% for data in @addt_data %>{text:'<%= " #{t(data)}" %>', onclick: function() {<%if data != "gender"%>editor.insertContent('<i>$%<%= data %>\%</i>');<%else%>
                      editor.windowManager.open({
                        title: 'Parent Category',
                        width : 270,
                        height : 70,
                        body: [
                          {type: 'listbox',
                            
                            label: 'Select :',
                            onselect: function(e) {
   // write a remote function and save the value in session 
                            },
                            values: [
                              {text: 'Select', value: 'select' },
                            <% for category in @sexual_identities %>
                                {text: '<%= category %>', value: '<%= category %>'},
     						 <% end %>

                            ],
                            onPostRender: function() {
                              // Select the item    						
                              this.value('<%=@sexual_identities.first%>');
                            }
                           
                          }
                        ]
                      });
<% end %>}},<% end %>]},
			]
		});
	},

	plugins: [
	"link image fullpage advlist autolink lists charmap print preview anchor",
	"searchreplace visualblocks code fullscreen",
	"insertdatetime table contextmenu paste ",
	"emoticons print textcolor"
	],
	toolbar: "link image fullpage | undo redo | fontsizeselect | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | forecolor backcolor | menu_button "
});
//plugins : media image moxiemanager
// toolbar : insertfile image
</script>

